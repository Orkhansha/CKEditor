@model SliderDetail
@{
    ViewData["Title"] = "Create";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <span class="text-danger">@ViewBag.Message</span>
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            SliderDetail
                        </p>
                        <form asp-controller="SliderDetail" asp-action="Create" class="forms-sample" method="post">
                            <div class="form-group">
                                <label for="name">Header</label>
                                @*<input maxlength="" minlength="" type="text" class="form-control" asp-for="Name">*@
                                <textarea class="form-control" asp-for="Header" id="slider-header" rows="8"></textarea>

                                <span class="text-danger my-1" asp-validation-for="Header"></span>

                            </div>
                            <label for="name">Description</label>
                            <input maxlength="100" type="text" class="form-control" asp-for="Description">
                            <label for="name">SignImage</label>
                            <input maxlength="100" type="text" class="form-control" asp-for="SignImage">
                            <button type="submit" class="btn btn-primary mr-2 my-3">Submit</button>
                            <a asp-controller="SliderDetail" asp-action="Index" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationPartial" />
    <script src="~/ckeditor/ckeditor.js"></script>

    <script>
        CKEDITOR.replace("slider-header");
    </script>


}
